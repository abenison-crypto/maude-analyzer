# MAUDE Analyzer Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Database Configuration
# =============================================================================

# Path to DuckDB database file
MAUDE_DB_PATH=./data/maude.duckdb

# =============================================================================
# FDA API Configuration (Optional - for automated updates)
# =============================================================================

# Get your API key from: https://open.fda.gov/apis/authentication/
# Without an API key: 40 requests/minute, 1,000/day
# With an API key: 240 requests/minute, 120,000/day
FDA_API_KEY=

# =============================================================================
# Application Settings
# =============================================================================

APP_NAME=MAUDE Analyzer
APP_VERSION=1.0.0

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Data Paths
# =============================================================================

# Path to downloaded FDA files
RAW_DATA_PATH=./data/raw

# Path to processed intermediate files
PROCESSED_DATA_PATH=./data/processed

# =============================================================================
# Performance Settings
# =============================================================================

# Maximum seconds to wait for a query
QUERY_TIMEOUT_SECONDS=60

# Maximum records to export at once
MAX_EXPORT_RECORDS=1000000

# Cache time-to-live in seconds (1 hour default)
CACHE_TTL_SECONDS=3600
